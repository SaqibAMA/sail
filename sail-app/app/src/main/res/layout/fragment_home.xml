<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screens.main.home.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:scrollbarStyle="outsideInset"
            android:scrollbars="vertical">

            <!--   Search bar and profile icon     -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <SearchView
                    android:id="@+id/searchProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="start"
                    android:background="@drawable/outline_search"
                    android:iconifiedByDefault="false"
                    android:maxWidth="290dp"
                    android:queryBackground="@android:color/transparent"
                    android:queryHint="Search here"
                    android:searchIcon="@drawable/ic_search" />

                <ImageButton
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:background="@drawable/background_circle"
                    android:contentDescription="@string/ic_profile_text"
                    android:elevation="5dp"
                    android:src="@drawable/ic_profile"
                    app:backgroundTint="@color/extra_light_gray" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/saleBannerImgView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/sale_banner_img_desc_text"
                android:src="@drawable/img_sale_banner" />


            <!--   Category Section     -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/dm_serif_display"
                    android:text="@string/heading_popular_categories_text"
                    android:textAllCaps="true"
                    android:textColor="@color/axolotl_200"
                    android:textSize="@dimen/h4"
                    android:textStyle="bold" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/categoriesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="0dp"
                    android:orientation="horizontal"
                    android:scrollbarSize="0dp"
                    android:scrollbarStyle="outsideInset"
                    android:scrollbars="horizontal"
                    tools:listitem="@layout/item_category" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/productsParentRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:listitem="@layout/item_products" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>